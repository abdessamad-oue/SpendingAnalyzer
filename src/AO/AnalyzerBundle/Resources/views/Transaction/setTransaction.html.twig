{% form_theme form 'AnalyzerBundle:Form:fields.html.twig' %}

<div id="ajaxResponse">
    <h2> <i class="fa fa-money"></i>&nbsp; {{  id is not defined ? "create a transaction"|trans|capitalize : "modify a transaction"|trans|capitalize}} : </h2>
    <br/>
    <div class="col-md-6 col-md-offset-3">
            {% if id is defined %}
            <form id="form_trans" class="form-horizontal" method="POST" action="{{path("setTransaction", {'id' : id})}}" novalidate>
            {% else %}
            <form id="form_trans" class="form-horizontal" method="POST" action="{{path("addTransaction")}}" novalidate>
            {% endif %}
                {{ form_widget(form)}}
            </form>
    </div>
</div>
